<div class="box record_detail_box">
  <div class="box-header">
    <div class="listHeaderContainer">
      <h3 class="box-title">Listing Articles</h3>
      <a href="<%= new_article_path %>" class="btn btn-sm btn-flat bg-olive pull-right new_record_button"><i class="fa fa-plus-square"></i> New Article</a>
    </div>
  </div>
  <div class="box-body no-padding">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>By</th>
          <th colspan="3" class="text-center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @collection.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.user.email %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <% if current_user == article.user %>
              <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
